# HRP Environment Variables
# Copy this file to .env and fill in your values
# Never commit .env to git!

# Data Directory (where DuckDB and MLflow store data)
HRP_DATA_DIR=~/hrp-data

# Data Sources (optional - Yahoo Finance works without keys)
POLYGON_API_KEY=your_polygon_key_here
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
TIINGO_API_KEY=your_tiingo_key_here

# Claude API (for agents)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Notifications (optional)
RESEND_API_KEY=your_resend_key_here
NOTIFICATION_EMAIL=your_email@example.com

# MLflow
MLFLOW_TRACKING_URI=sqlite:///~/hrp-data/mlflow/mlflow.db

# Logging
LOG_LEVEL=INFO

# Environment (development, staging, production)
# In production/staging, dashboard authentication is required
HRP_ENVIRONMENT=development

# Dashboard Authentication
# Required in staging/production environments
HRP_AUTH_ENABLED=true
HRP_AUTH_COOKIE_KEY=your-secret-key-at-least-32-characters-long
# HRP_AUTH_USERS_FILE=~/hrp-data/auth/users.yaml  # default location
